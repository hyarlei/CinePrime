generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
  id       Int      @id @default(autoincrement())
  nome     String?
  cpf      String   @unique
  telefone String?
  email    String   @unique
  password String
  isAdmin  Boolean  @default(false)
  profile  String   @default("client")
  //carrinhos Carrinho[]
  //Reserva   Reserva[]
  tickets  Ticket[]
}

model Room {
    id                     Int       @id @default(autoincrement())
    qtd_max                Int
    typeExhibitionAccepted String
    sessions               Session[]
}

model Session {
    id              Int      @id @default(autoincrement())
    dateTime        DateTime
    idRoom          Int
    exibitionType   String
    dublingType     String
    atualTicketsQtd Int
    maxTicketsQtd   Int
    tickets         Ticket[]
    room            Room     @relation(fields: [idRoom], references: [id], onDelete: Cascade)

    @@index([idRoom])
}

model Ticket {
    id        Int     @id @default(autoincrement())
    idUser    Int
    idSession Int
    type      String
    session   Session @relation(fields: [idSession], references: [id], onDelete: Cascade)
    user      User    @relation(fields: [idUser], references: [id], onDelete: Cascade)

    @@index([idSession])
    @@index([idUser])
}
